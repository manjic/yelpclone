<% if @restaurants.any? %>
		<% @restaurants.each do |restaurant| %>
		<%= restaurant.name %><br>
		<%= link_to 'Edit', edit_restaurant_path(restaurant) %><br>
		<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant),method: :delete,data: {confirm: 'Are you sure?'} %><br>
	<% end %>
<% else %>
	No restaurants yet
<% end %><br>

<%= link_to 'Add a restaurant', new_restaurant_path %>
 